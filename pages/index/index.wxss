/* pages/index1/index1.wxss */
page{background: #F0F0F0;}
/*顶部搜索  */
.top-search{background: #F34347;padding: 10rpx;display: flex;align-items: center;font-size: 32rpx;position: fixed;top: 0;left: 0; width: 100%;box-sizing: border-box;height: 80rpx;z-index: 10;}
.search-title{color: #FFF;width: 100rpx;text-align: center; font-size: 32rpx;margin-right: 20rpx;}
.top-search input{background: #F9F9F9;color: #333;border-radius: 20px;padding: 3rpx 20rpx;padding-left: 60rpx; flex: 1;position: relative;}
.top-search image{position: absolute;width: 40rpx;height: 40rpx;left: 145rpx;}
/* 轮播 */
.img-contain{margin-top: 80rpx;height: 340rpx;overflow: hidden;position: relative;box-shadow: 0 0 3px #DCDCDC;}
.img-contain image{display: block;width: 100%;}
.img-contain swiper{height: 100%;}
.tag{position: absolute;z-index: 1;right: 0;bottom: 0;width: 30%; background: rgba(237, 147, 44, .8);padding: 10rpx 20rpx;color: white;}
.tag-name{font-size: 40rpx;font-weight: bold;}
.tag-other{font-size: 30rpx;text-align: right;display: flex;align-items: center;}
.block{min-width: 100rpx; flex: 1;height: 30rpx;background: linear-gradient(45deg,#ffc734 0%,#ffc734 70%,transparent 70%);}
.diqu{text-align:right;}
.catalog-title{font-size: 32rpx;color: #F34347;}
.catalog{display: flex;align-items: center;padding: 0 30rpx;padding-left: 10rpx;background: white;box-shadow: 0 0 3px #DCDCDC;overflow-x: scroll;}
.catalog .item{flex: 1;text-align: center;position: relative;min-width: 25.5%;padding: 10rpx 0;}
.item::after{content: "";position: absolute;width: 3rpx;height: 90%;top: 5%;left: 0; background: linear-gradient(to bottom,rgba(200, 245, 244, .2) 0%,rgba(200, 245, 244, 1) 40%,rgba(200, 245, 244,1) 60%,rgba(200, 245, 244, .2) 100%);}
.item:last-child::before{content: none;position: absolute;width: 3rpx;height: 70%;top: 0;right: 0;background: linear-gradient(to bottom,rgba(200, 200, 200, .2) 0%,rgba(170, 170, 170, 1) 40%,rgba(170, 170, 170,1) 60%,rgba(200, 200, 200, .2) 100%);}
.item image{width: 140rpx;display: block;margin: 0 auto;}
.item-title{color: #333;font-size: 30rpx;}
.main-content{background: white;margin-top: 16rpx;box-shadow: 0 0 3px #DCDCDC;text-align: center;padding-bottom: 40rpx;}
/* 景区列表 */
.content-title{font-weight: bold;color: #777;font-size: 32rpx;padding: 10rpx;}
.content{width: 95%;background: #f7c4b3;margin: 0 auto;border-radius: 5px;box-sizing: border-box;padding: 20rpx;font-size: 32rpx;display: grid;grid-template-columns: 1fr 1fr;grid-column-gap: 50rpx;grid-row-gap: 40rpx;}
.card{background: #ea704b;border-radius: 3px;display: flex;padding: 6rpx;position: relative;}
.card:nth-child(2n+1)::after{content: ""; position: absolute;width: 2px;height: 100%;top: 50%; right: -15rpx;transform: translateY(-50%); z-index: 2;background: linear-gradient(to bottom,rgba(200, 200, 200, .2) 0%,rgba(255, 255, 255, 1) 40%,rgba(255, 255, 255,1) 60%,rgba(200, 200, 200, .2) 100%); }
.card:nth-child(2n)::after{content: "";position: absolute;width: 200%;height: 2px;bottom: -20rpx;left: -100%; background: linear-gradient(to right,rgba(200, 200, 200, .2) 0%,rgba(255, 255, 255, 1) 40%,rgba(255, 255, 255,1) 60%,rgba(200, 200, 200, .2) 100%);}
.card image{width: 140rpx;height: 140rpx;margin-right: 4rpx;}
.card:last-child::after{content: none;}
.card-other{flex: 1;text-align: left;align-items: center;align-content: center;}
.card .card-name{font-size: 30rpx;font-weight: bold;color: white;height: 100rpx;text-align: center;overflow: hidden;text-overflow: ellipsis;}
.card-to{font-size: 26rpx;color: #DCDCDC;text-align: right;border-top: 1px solid rgba(200, 200, 200, .2);}

.catalog-title{position: relative;height: 60rpx;padding-top: 10rpx;background: white;margin-top: 20rpx;box-shadow: 0 0 3px #DCDCDC;}
.catalog-title::after{position: absolute;width: 100%;height: 1px;background: #DCDCDC;bottom: 0;left: 0;z-index: 3;}
.catalog-image-contain{position: absolute;top: 10rpx;left: 0;width: 100%;height: 100%;display: block;background: white;}
.catalog-image-contain image{width: 100%;}
.catalog-text{position: absolute;z-index: 2;top: 50%;left: 50%;transform: translate(-50%,-50%);margin-top: -5rpx;}

/* 弹出框 */
.log-bg{position: fixed;width: 100%;height: 100%; top: 0;left: 0;z-index: 11;border-radius: 5px;background: rgba(0, 0, 0, .5);transition: 0.5s all ease-in-out;}
.log{position: absolute;width: 90%;background: rgba(237, 147, 44, .8);top: 50%;left: 50%;border-radius: 5px; transform: translate(-50%,-50%);}
.log-title{text-align: center;color: white;font-size: 32rpx;padding: 10rpx;border-bottom: 1px solid rgba(200, 200, 200, .5);}
.log-content{padding: 20rpx;color: white;font-size: 32rpx;}
.log-confirm{position: absolute;bottom: 0;width: 96.5%;height: 50rpx; text-align: center;color: white;font-size: 32rpx;padding: 10rpx;border-top: 1px solid rgba(200, 200, 200, .5);}
.log-hide{transform: translateX(100%);}
.log-bottom{box-sizing: border-box; position: absolute;bottom: 72rpx; color: #DCDCDC;font-size: 30rpx;text-align: right;width: 100%;left: 0;padding-right: 20rpx;}

/*景区列表(改)  */

.content{background: white;
}
.shop-item{overflow: hidden;position: relative;width: 100%; height: 100%;min-height: 167px;box-sizing: border-box;}

.shop-item-bg{width: 100%;position: absolute;top: 0;left: 0;z-index: 2;}
.shop-item-icon{position: absolute;top: 50%;left: 50%; width: 72%;height: 72%; border-radius: 50%;transform: translate(-50%,-51%);z-index: 1;}
.shop-item-name{position: absolute;bottom: 30rpx;left: 50%;transform: translateX(-50%); width: 200rpx;text-align: center;background: #53a237;color: white;z-index: 3;border-radius: 5px;box-shadow: 0 0 3px #AAA;padding: 5rpx 10rpx;}
