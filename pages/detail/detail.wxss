.show-name{font-size: 60rpx;text-shadow:5px 5px 2px #000;font-weight: 600;letter-spacing: 4px;position: relative;}
.show-name::after{content: "";position: absolute;bottom: 0;left: 0;width: 60%; height: 1px; border-bottom: 1px dashed rgba(255, 255, 255, .3);}
.card{position: relative; width: 95%;margin: 0 auto; background: rgba(0, 0, 0, .3);box-sizing: border-box;border-radius: 10px;padding: 20rpx;box-shadow: 0 0 10px #F9FCDA;color: white;margin-bottom: 40rpx;transform: translateY(350rpx);}
.light{width: 200rpx;height: 200rpx;position: absolute;border-radius: 50%;overflow: hidden;right: 20rpx;top: -120rpx;transition: all 1s ease-in-out;z-index: 1;}
.light-active{transform: rotate(-20deg);box-shadow: 0 0 5px #F9FCDA;}
.light image{width: 200rpx;height: 200rpx; border-radius: 50%;transition: all 1s ease-in-out;}
.wenzi{position: absolute;top: 50%;left: 50%;transform: translate(-50%,-50%);color: white;font-weight: 600;font-size: 34rpx;}
.light-image{position: relative; -webkit-filter: grayscale(100%);-moz-filter: grayscale(100%);-ms-filter: grayscale(100%);-o-filter: grayscale(100%);filter: grayscale(100%);}
.light-image-active{position: relative; -webkit-filter: grayscale(0%);-moz-filter: grayscale(0%);-ms-filter: grayscale(0%);-o-filter: grayscale(0%);filter: grayscale(0%);}
.light-image-active::after{content: "已点亮";position: absolute;top: 50%;left: 50%;transform: translate(-50%,-50%);font-size: 34rpx;font-weight: 600;color: #F34347;white-space: nowrap;}
.item{display: flex;align-items: center; font-size: 32rpx;padding: 10rpx 0;text-align: justify;color: white;}
.swiper-img{width: 100%;display: block;}
.item-icon image{width: 50rpx;height: 50rpx;transform: translateY(6rpx);margin-right: 20rpx;}
.item-content{padding: 10rpx 5rpx;border-bottom: 1px dashed rgba(255, 255, 255, .3);overflow: hidden;text-overflow: ellipsis;white-space: nowrap;flex: 1;}
.intro-title{border-bottom: 1px solid rgba(255, 255, 255, .3);font-size: 34rpx;padding: 10rpx;text-decoration: underline;color: #F34347;letter-spacing: 2px;}
.intro-content{font-size: 32rpx;text-indent: 64rpx;padding-top: 10rpx;}


.light1{background: white;width: 150rpx; position: absolute;z-index: 2; top: 10rpx;right: 10rpx;line-height: 300rpx;font-size: 60rpx;text-align: center;letter-spacing: 10rpx;font-weight: bold;border-top-right-radius: 10rpx;padding: 20rpx;box-shadow: 0px 0px 5px #000 inset;border-radius: 3px;}
.light1 image{width: 100%;height: 324rpx;display: block;transform: translate(10rpx,5rpx);-webkit-filter: grayscale(100%);-moz-filter: grayscale(100%);-ms-filter: grayscale(100%);-o-filter: grayscale(100%);filter: grayscale(100%);}
.light1 .light1-active{-webkit-filter: grayscale(0%);-moz-filter: grayscale(0%);-ms-filter: grayscale(0%);-o-filter: grayscale(0%);filter: grayscale(0%);}
