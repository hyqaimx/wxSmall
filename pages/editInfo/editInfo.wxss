/* pages/editInfo/editInfo.wxss */
page{background: #F5F5F5;}
.top-back{position: fixed;top: 0;left: 0;width: 100%;height: 80rpx;line-height: 80rpx;background: #F34347;text-align: center;color: white;z-index: 3;}
.nav{position: absolute;top: 25rpx;left: 20rpx;width: 30rpx;height: 30rpx;border-bottom: 2px solid white;border-left: 2px solid white;transform: rotate(45deg);}
.edit-area{box-shadow: 1px 1px 3px #D8D8D8;margin-top: 80rpx;}
.edit-contain{padding:20rpx 10rpx;background: white;display: flex;align-items:center;position: relative;}
.edit-contain:not(:last-child):after{content: "";position: absolute;width: calc(100% - .1rem);height: 1px;background: #F5F5F5;right: 0;bottom: 0;}
.edit-title{width: 160rpx;text-align: center;}
.edit-content{flex:1;display: flex;align-items:center;}
.edit-content image{width: 140rpx;height: 140rpx;border-radius: 5px;margin-left: 40rpx;box-shadow: 0 0 5px #AAA;}
radio{margin-right: 80rpx;}
.submit{position: fixed;bottom: 40rpx;left: 10%; background: #F34347;width: 80%;border:none;height: 70rpx;line-height: 70rpx;border-radius: 3px;box-shadow: 1px 1px 5px #AAA;color: white;}
